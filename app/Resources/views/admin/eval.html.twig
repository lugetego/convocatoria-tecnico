{% extends 'base.html.twig' %}

{% block nav %}
    <li class="active"><a href="#">Registros</a></li>
    <li><a data-toggle="modal" data-target="#correos">Correos</a></li>
{% endblock %}

{% block navr %}
    <li class="active"><a href="{{ path('logout') }}">Logout<span class="sr-only">(current)</span></a></li>
{% endblock %}

{% block body %}

    <div class="container">

        <ul class="breadcrumb">
            <li><a href="{{ path('admin') }}">Solicitudes</a></li>
            <li><a href="{{ path('registro_show', { 'slug': slug }) }}"> {{ slug }}</a></li>
            <li class="active">Evaluación</li>
        </ul>

        <form action="{{ path('form_eval', { 'id': id }) }}" method="post" {{ form_enctype(registro) }}>


            <div class="card">
                <div class="card-header">
                    <h1><small><i class="fa fa-check-square"></i> Evaluación {{ slug }}</small></h1>
                </div>
                <div class="card-body">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <div >
                                {{ form_label(registro.activo) }}
                            </div>
                            <div>
                                {% spaceless %}
                                    {% for child in registro.activo %}
                                        <div class="radio-inline">
                                            {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                        </div>
                                    {% endfor %}
                                {% endspaceless %}
                            </div>
                            <div>{{ form_errors(registro.activo) }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_rest(registro) }}
                    <button type="submit"  class="btn btn-primary">Guardar</button>
                    <button class="btn btn-danger" >Cancelar</button>
                </div>
            </div>
        </form>
    </div>





{% endblock %}
